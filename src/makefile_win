CXX = g++
BIN_NAME = nongravitar
ODIR  = ../obj
CFLAGS = 


BIN := $(BIN_NAME).exe

SRC := $(wildcard *.cpp)
OBJS = $(addprefix $(ODIR)/,$(SRC:.cpp=.o))
# edit to point to SFML install dir
SFML_DIR = C:/CULETTO/CARTELLADISFML/PER/FAVORE/
# add to the next line all dependencies we need, "-s" means static version
LIBS = -lmingw32 -DSFML_STATIC -lsfml-window-s -lsfml-system-s -lopengl32 -lwinmm -lgdi32

SFML_INC = -I $(SFML_DIR)/include
SFML_LIB = -L $(SFML_DIR)/lib

$(ODIR)/%.o: %.cpp
    md $(ODIR)

    $(CXX) -c -o $@ $^ $(CFLAGS)

$(BIN): $(OBJS)
    $(CXX) -o $(BIN) $^ $(SFML_INC) $(SFML_LIB) $(LIBS)

clean:

	rm -f -r $(ODIR) nongravitar
